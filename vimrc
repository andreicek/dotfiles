set mouse=a
set number
set clipboard=unnamed
set laststatus=0

" Colors {{{
  let $NVIM_TUI_ENABLE_TRUE_COLOR=1
  syntax enable
  set background=dark
" }}} Colors

" Spaces & Tabs {{{
  set tabstop=2
  set softtabstop=2  
  set shiftwidth=2
  set expandtab
  set autoindent
  set copyindent
" }}} Spaces & Tabs
