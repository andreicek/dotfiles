PLUGIN_DIR="$HOME/.config/sketchybar/plugins"
SPOTIFY_EVENT="com.spotify.client.PlaybackStateChanged"

sketchybar --bar height=32        \
                 blur_radius=50   \
                 position=bottom  \
                 sticky=off       \
                 padding_left=10  \
                 padding_right=10 \
                 color=0xab002b36

sketchybar --default updates=when_shown                       \
                     drawing=on                               \
                     icon.font="Hack Nerd Font:Bold:14.0"     \
                     icon.color=0xffffffff                    \
                     icon.y_offset=-1                         \
                     label.font="MonoLisa Custom:Normal:12.0" \
                     label.color=0xffffffff                   \
                     label.padding_left=4                     \
                     label.padding_right=4                    \
                     icon.padding_left=4                      \
                     icon.padding_right=4

sketchybar --add item  clock center   \
           --set clock update_freq=10 \
                       script="$PLUGIN_DIR/clock.sh"

sketchybar --add item    weather center                  \
           --set weather update_freq=10                  \
                         script="$PLUGIN_DIR/weather.sh" \
          --subscribe    weather   mouse.clicked

sketchybar --add       event           spotify_change $SPOTIFY_EVENT   \
           --add       item            spotify.name left               \
           --add       item            spotify.play left               \
           --set       spotify.play    updates=on                      \
                                       label.drawing=off               \
                                       script="$PLUGIN_DIR/spotify.sh" \
           --subscribe spotify.play    spotify_change

sketchybar --add       item           github.count right              \
           --set       github.count   update_freq=60                  \
                                      script="$PLUGIN_DIR/github.sh"  \
           --subscribe github.count   mouse.clicked

sketchybar --add       item           mail.count right              \
           --set       mail.count     update_freq=5                 \
                                      script="$PLUGIN_DIR/mail.sh"  \
           --subscribe mail.count     mouse.clicked

sketchybar --add       item        cal.name right                   \
           --set       cal.name    update_freq=5                    \
                                   script="$PLUGIN_DIR/calendar.sh" \
           --subscribe cal.name    mouse.clicked

sketchybar --update
