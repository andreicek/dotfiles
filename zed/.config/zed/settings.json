{
  "assistant": {
    "dock": "bottom"
  },
  "terminal": {
    "dock": "bottom"
  },
  "theme": "Gruvbox Dark Hard",
  "ui_font_family": "BlexMono Nerd Font Mono",
  "buffer_font_family": "BlexMono Nerd Font Mono",
  "buffer_font_size": 13,
  "tab_size": 2,
  "base_keymap": "VSCode",
  "language_overrides": {
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  }
}
