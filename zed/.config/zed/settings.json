{
  "base_keymap": "VSCode",
  "features": {
    "copilot": false
  },
  "theme": "Gruvbox Dark Hard",
  "buffer_font_size": 13,
  "buffer_font_family": "IBM Plex Mono",
  "tab_size": 2,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "elixir": {
    "lsp": "next_ls"
  },
  "language_overrides": {
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  }
}
