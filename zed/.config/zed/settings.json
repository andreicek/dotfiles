{
  "vim_mode": true,
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "theme": "Catppuccin Frapp√©",
  "ui_font_family": "Berkeley Mono",
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 14,
  "ui_font_size": 15,
  "tab_size": 2,
  "base_keymap": "VSCode",
  "experimental.theme_overrides": {
    "tab_bar.background": "#303446",
    "tab.inactive_background": "#303446",
    "status_bar.background": "#303446",
    "title_bar.background": "#303446",
    "panel.background": "#303446",
    "border.variant": "#303446",
    "scrollbar.track.border": "#303446",
    "editor.active_line.background": "#303446"
  },
  "languages": {
    "Elixir": {
      "language_servers": ["!lexical", "!elixir-ls", "next-ls"],
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    },
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TypeScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "HEEX": {
      "language_servers": ["!lexical", "!elixir-ls", "next-ls"]
    }
  },
  "lsp": {
    "next-ls": {
      "initialization_options": {
        "extensions": {
          "credo": {
            "enable": false
          }
        },
        "experimental": {
          "completions": {
            "enable": true
          }
        }
      }
    }
  }
}
