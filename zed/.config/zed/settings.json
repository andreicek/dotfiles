{
  "theme": "Solarized Light",
  "ui_font_family": "Berkeley Mono",
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 14,
  "ui_font_size": 15,
  "tab_size": 2,
  "base_keymap": "VSCode",
  "languages": {
    "Elixir": {
      "language_servers": ["!lexical", "!elixir-ls", "next-ls"],
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    },
    "HEEX": {
      "language_servers": ["!lexical", "!elixir-ls", "next-ls"]
    }
  },
  "lsp": {
    "next-ls": {
      "initialization_options": {
        "extensions": {
          "credo": {
            "enable": false
          }
        },
        "experimental": {
          "completions": {
            "enable": true
          }
        }
      }
    }
  }
}
