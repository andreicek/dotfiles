[core]
  ignorecase = false
  excludesfile = /Users/andreicek/.dotfiles/git/gitignore
  pager = delta
[push]
  default = current
  autoSetupRemote = true
[color]
  ui = true
[alias]
  track = branch master --set-upstream-to origin/master
 	pls = push --force-with-lease
  wc = "!f() { git diff \"$1^\" \"$1\"; }; f"
  wcf = diff-tree --no-commit-id --name-only -r
  fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
[rebase]
  autosquash = true
[commit]
  gpgsign = true  
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[delta]
  line-numbers = true
  features = unobtrusive-line-numbers decorations
  light = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
